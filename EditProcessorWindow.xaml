<Window x:Class="ProcessorDB.EditProcessorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать процессор" Height="600" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label>Наименование:</Label>
            <TextBox Text="{Binding Name}" Margin="0,0,0,10"/>

            <Label>Производитель:</Label>
            <ComboBox x:Name="ManufacturerComboBox" SelectedValue="{Binding ManufacturerId}" DisplayMemberPath="Name" SelectedValuePath="Id" Margin="0,0,0,10"/>

            <Label>Модель:</Label>
            <TextBox Text="{Binding Model}" Margin="0,0,0,10"/>

            <Label>Страна:</Label>
            <ComboBox x:Name="CountryComboBox" SelectedValue="{Binding CountryId}" DisplayMemberPath="Name" SelectedValuePath="Id" Margin="0,0,0,10"/>

            <Label>Год выпуска:</Label>
            <ComboBox x:Name="ReleaseYearComboBox" SelectedValue="{Binding ReleaseYear}" Margin="0,0,0,10"/>

            <Label>Техпроцесс:</Label>
            <ComboBox x:Name="TechProcessComboBox" SelectedValue="{Binding TechSpec.TechProcess}" Margin="0,0,0,10"/>

            <Label>Частота (ГГц):</Label>
            <TextBox Text="{Binding TechSpec.Frequency}" Margin="0,0,0,10" PreviewTextInput="NumericOnly_PreviewTextInput"/>

            <Label>Кеш L3:</Label>
            <ComboBox x:Name="CacheL3ComboBox" SelectedValue="{Binding TechSpec.CacheL3}" Margin="0,0,0,10"/>

            <Label>Ядра:</Label>
            <ComboBox x:Name="CoresComboBox" SelectedValue="{Binding TechSpec.Cores}" Margin="0,0,0,10"/>

            <Label>Слот:</Label>
            <ComboBox x:Name="SlotComboBox" SelectedValue="{Binding TechSpec.Slot}" Margin="0,0,0,10"/>

            <Label>Дата производства:</Label>
            <DatePicker SelectedDate="{Binding ProductionInfo.ProductionDate}" Margin="0,0,0,10"/>

            <Label>Гарантия (мес):</Label>
            <ComboBox x:Name="WarrantyComboBox" SelectedValue="{Binding ProductionInfo.WarrantyPeriod}" Margin="0,0,0,10"/>

            <Label>Цена ($):</Label>
            <TextBox Text="{Binding ProductionInfo.Price}" Margin="0,0,0,10" PreviewTextInput="NumericOnly_PreviewTextInput"/>

            <Label>Баллы:</Label>
            <TextBox Text="{Binding ProductionInfo.Points}" Margin="0,0,0,10" PreviewTextInput="NumericOnly_PreviewTextInput"/>

            <CheckBox Content="Акция" IsChecked="{Binding ProductionInfo.Promotion}" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Сохранить" Click="Save_Click" Margin="0,0,10,0"/>
                <Button Content="Отмена" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
