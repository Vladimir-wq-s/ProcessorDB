<Window x:Class="ProcessorDB.EditCountriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать страны" Height="300" Width="300">
    <Grid>
        <ListBox x:Name="CountriesListBox" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Добавить" Click="AddCountry_Click"/>
            <Button Content="Удалить" Click="DeleteCountry_Click" Margin="10,0,0,0"/>
            <Button Content="Сохранить" Click="Save_Click" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
